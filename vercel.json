{
  "buildCommand": "cd frontend/app && npm ci && npm run build",
  "outputDirectory": "frontend/app/dist",
  "installCommand": "cd frontend/app && npm ci",
  "framework": "vite",
  "functions": {
    "frontend/app/dist/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 