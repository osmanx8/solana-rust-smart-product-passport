# ========================================
# SPP Backend Environment Configuration
# ========================================

# Environment
ENVIRONMENT=development

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://localhost/spp_db
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2

# ========================================
# Solana Configuration
# ========================================
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_RPC_URL_ALT=https://devnet.solana.rpcpool.com
SOLANA_NETWORK=devnet
SOLANA_COMMITMENT=confirmed
KEYPAIR_PATH=keypair.json
TREASURY_KEYPAIR_PATH=/secure/path/to/treasury_keypair.json
FEE_RECIPIENT=your-wallet-address-here
SERVICE_FEE_PERCENTAGE=0.2

# ========================================
# Server Configuration
# ========================================
SERVER_HOST=127.0.0.1
SERVER_PORT=3000
SERVER_WORKERS=4
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ========================================
# Upload Configuration
# ========================================
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
STORAGE_PATH=./uploads
ARWEAVE_URL=https://arweave.net
ARWEAVE_KEY_PATH=arweave-key.json

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_ENABLE_CONSOLE=true

# ========================================
# Security Configuration
# ========================================
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# ========================================
# Redis Configuration (Optional)
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# Email Configuration (Optional)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ========================================
# Production Overrides
# ========================================
# Для production змініть ENVIRONMENT=production
# та оновіть відповідні URL та ключі 